{
  "name": "web",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "nx run-many --target=build --projects block-parser-wasm,@block-parser-wasm/web --output-style=static",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "dev": "concurrently -k --prefix none -n WEB,WASM,RUST -c blue,gray,gray \"npm run dev:web\" \"npm run dev:wasm\" \"npm run dev:test:rust\"",
    "dev:web": "nx serve @block-parser-wasm/web --output-style=static && echo '\nðŸš€ http://localhost:4200/'",
    "dev:wasm": "cd packages/parser && cargo watch -q -w src -s \"nx build block-parser-wasm --output-style=static\"",
    "dev:test:rust": "cd packages/parser && cargo watch -w src -w tests -s 'cargo test --color=always'"
  },
  "private": true,
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "6.29.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nx/devkit": "21.1.2",
    "@nx/js": "21.1.2",
    "@nx/react": "21.1.2",
    "@nx/vite": "21.1.2",
    "@nx/web": "21.1.2",
    "@nx/workspace": "21.1.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "10.4.13",
    "concurrently": "^9.1.2",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "nx": "21.1.2",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.3",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "vite": "^6.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}